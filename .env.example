DATABASE_URL=postgresql+psycopg2://USER:PASS@localhost:5432/pubex_qa_bot

LOG_LEVEL=INFO
LOG_FILE=app.log

# Ollama endpoint
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_TIMEOUT_SECONDS=300
OLLAMA_CHAT_PATH=/api/chat
OLLAMA_EMBED_PATH=/api/embed

# Ollama HTTP client options
OLLAMA_HTTP_RETRY_TOTAL=2
OLLAMA_HTTP_RETRY_BACKOFF=0.3
OLLAMA_HTTP_RETRY_STATUS_FORCELIST=429,500,502,503,504
OLLAMA_HTTP_RETRY_ALLOWED_METHODS=POST
OLLAMA_POOL_CONNECTIONS=16
OLLAMA_POOL_MAXSIZE=16

# LLM defaults
LLM_MODEL=qwen2.5:3b
LLM_MAX_NEW_TOKENS=2048
LLM_TEMPERATURE=0.2
LLM_TOP_P=0.8
LLM_TOP_K=30
LLM_REPEAT_PENALTY=1.3

# Docling ingestion
DOCLING_API_BASE_URL=http://localhost:8081
DOCLING_API_TIMEOUT_SECONDS=300
DOCLING_PRESET=granite_vision
DOCLING_BATCH_SIZE=1
DOCLING_PAGE_BREAK_PLACEHOLDER=<!-- page break -->
DOCLING_IMAGE_DPI=175

# Embedding
OLLAMA_EMBED_MODEL=nomic-embed-text
EMBED_BATCH_SIZE=10
